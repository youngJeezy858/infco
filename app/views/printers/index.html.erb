<div class="page-header">
  <h1>Printers</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @printers.each do |printer| %>
    <tr>
      <td><%= printer.name %></td>
      <td><%= link_to 'Edit', edit_printer_path(printer), :class => 'btn btn-mini' %></td>
      <td>
        <%= link_to 'Delete', printer,
            method: :delete, data: { confirm: 'Are you sure?' },
            :class => 'btn btn-mini btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<div class="form-actions">
  <%= link_to 'Add Printer', new_printer_path, :class => 'btn btn-primary' %>
  <%= link_to 'Back', admin_tools_path, :class => 'btn' %>
</div>
