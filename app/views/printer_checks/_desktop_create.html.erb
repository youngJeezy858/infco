<div class="hidden-phone">
  <% unless printers.empty? %>
  <%= form_for :printer_checks, 
      :url => mass_create_operations_check_printer_checks_path(operations_check) do |f| %>
  <div class="row">
    <div class="offset2 span3">
      <h5>Ticket Number</h5>
    </div>
    <div class="span3">
      <h5>Passed?</h5>
    </div>
  </div>
  <% printers.each_with_index do |p, i| %>
  <div class="row" style="padding-bottom: 5px;">
    <div class="span2">
      <h5><%= p %></h5>
      <%= f.hidden_field "[#{i}][name]", :value => p %>
    </div>
    <div class="span3 ops-check-number-field">
      <%= f.number_field "[#{i}][ticket]" %>
    </div>
    <div class="span3 ops-check-check-box">
      <%= f.check_box "[#{i}][passed]" %>
    </div>
  </div>
  <div class="row">
    <div class="span6 input-divider"></div>
  </div>
  <% end %>
  <br/>
  <div class="row">
    <div class="offset4 span3">
      <div class="actions">
        <%= f.submit "Create Check", :class => 'btn btn-primary' %>
      </div>
    </div>
  </div>
  <% end %>
  <% end %>
</div>
