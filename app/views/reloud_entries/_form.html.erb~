<%= form_for(@reloud_entry) do |f| %>
  <% if @reloud_entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reloud_entry.errors.count, "error") %> prohibited this reloud_entry from being saved:</h2>

      <ul>
      <% @reloud_entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="controls">
    <%= f.label :name %>
    <div class="control-group">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to "Back", reloud_entries_path, :class => 'btn' %>
  </div>
<% end %>
