<div class="page-header">
  <h1>Automounts</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @automounts.each do |automount| %>
    <tr>
      <td><%= automount.name %></td>
      <td><%= link_to 'Edit', edit_automount_path(automount), :class => 'btn btn-mini' %></td>
      <td>
        <%= link_to 'Delete', automount,
            method: :delete, data: { confirm: 'Are you sure?' },
            :class => 'btn btn-mini btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<div class="form-actions">
  <%= link_to 'Add Automount', new_automount_path, :class => 'btn btn-primary' %>
  <%= link_to 'Back', admin_tools_path, :class => 'btn'%>
</div>
