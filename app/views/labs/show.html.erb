<%- model_class = Lab -%>

<div class="page-header">
  <h1><%= @lab.name %></h1>
</div>

<% unless notice.nil? %>
<div class="alert">
  <p id="notice"><%= notice %></p>
</div>
<% end %>

<div class="row-fluid">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Machine Name</th>
	<th></th>
	<th></th>
      </tr>
    </thead>

    <tbody>
      <% @lab.machines.each do |machine| %>
      <tr>
        <td><%= machine.name %></td>
        <td><%= link_to "Edit Name", 
		edit_lab_machine_path(@lab, machine), 
		:class => 'btn btn-mini' %> 
	</td>
        <td><%= link_to "Delete", lab_machine_path(@lab.id, machine.id),
              data: { confirm: "Are you sure?" }, method: :delete,
              :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
  labs_path, :class => 'btn' %>
  <%= link_to 'Edit Name', edit_lab_path(@lab), :class => 'btn' %>
  <%= link_to 'Add Machine', new_lab_machine_path(@lab), :class => 'btn btn-primary' %>
  <%= link_to 'Destroy', @lab_check,
      method: :delete, data: { confirm: 'Are you sure you want to remove this lab?' },
      class: 'btn btn-danger' %>
</div>
