<div class="page-header">
  <h1>Disk Space Checks</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
    <% @space_entries.each do |space_entry| %>
    <tr>
      <td><%= space_entry.name %></td>
      <td><%= link_to 'Edit', edit_space_entry_path(space_entry), :class => 'btn btn-mini' %></td>
      <td>
	<%= link_to 'Delete', space_entry,
            method: :delete, data: { confirm: 'Are you sure?' },
            :class => 'btn btn-mini btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<div class="form-actions">
  <%= link_to 'New Space entry', new_space_entry_path, :class => 'btn btn-primary' %>
</div>
